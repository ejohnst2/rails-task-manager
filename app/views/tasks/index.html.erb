<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ul>
  <% @tasks.each do |task| %>
    <li><%= pretty_task(task) %></li>
    <%= link_to "show details", task_path(task.id) %>
    <%= link_to "edit task", edit_task_path(task.id) %>
    <%= link_to "remove task", task_path(task.id), method: :delete %>
  <% end %>
</ul>

<%= link_to "new task", new_task_path %>
